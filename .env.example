# Example environment file. Copy this to `.env` locally and fill secrets there.
# This file should NOT contain real secrets in the repository.

# Postgres (db service)
POSTGRES_USER=dev
POSTGRES_PASSWORD=CHANGEME_POSTGRES_PASSWORD
POSTGRES_DB=deepdarshak_dev

# App-level DB vars used by services (can map to the same as above)
DB_USER=dev
DB_PASS=CHANGEME_DB_PASSWORD
DB_HOST=localhost
DB_PORT=5432
DB_NAME=deepdarshak_dev

# Dagster Postgres (optional overrides)
DAGSTER_POSTGRES_USER=dev
DAGSTER_POSTGRES_PASSWORD=CHANGEME_POSTGRES_PASSWORD
DAGSTER_POSTGRES_HOST=db
DAGSTER_POSTGRES_PORT=5432
DAGSTER_POSTGRES_DB=deepdarshak_dev

# dbt paths
DBT_PROFILES_DIR=/app/dbt_project
DBT_PROJECT_DIR=/app/dbt_project
DBT_TARGET=dev

# API / Integration secrets
API_KEY=CHANGEME_API_KEY
SLACK_BOT_TOKEN=CHANGEME_SLACK_TOKEN
